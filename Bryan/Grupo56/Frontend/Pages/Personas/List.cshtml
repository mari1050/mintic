@page
@model Frontend.Pages.PrivacyModel
@{
    ViewData["Title"] = "Bryan";
}
<h1>@ViewData["Title"]</h1>

<p>En esta pagina veremos los datos</p>


<ul class="heroes">
    <li>Cliente</li>
    <li>Empresa</li>
    <li>Empleado</li>
</ul>


<table class="table">
    <tr>
        <th>Id</th>
        <th>Cliente</th>
        <th>Edad</th>
        <th>Detalles</th>
        <th>Editar</th>
        <th>Borrar</th>
    </tr>
    @foreach (var Cliente in Model.Clientecitos)
    {
        <tr>
            <td>@Cliente.Id</td>
            <td>@Cliente.Nombre</td>
            <td>@Cliente.Edad</td>
            <td>
                <a asp-page="./Details" asp-route-id="@Cliente.Id">
                    <i class="fa-circle-info"></i>detalles
                </a>
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@Cliente.Id">
                    <i class="fa-solid fa-trash-can"></i>Borrar
                </a>
            </td>
        </tr>
    }
</table>
