@page
@model ListEmpleados
@{
    ViewData["Title"] = "Empleado";
}
<h1>@ViewData["Title"]</h1>

<p>Listado de Empleados Registradas en localhost.</p>
<br>
<br>
<a class="btn btn-warning" asp-page="./Create"> Crear Registro</a>
<table class="table">
    
    <tr>
            <td>ID</td>
            <td>Nombre</td>
            <td>Apellido</td>
            <td>Cedula</td>
            <td>Tipo_empleado</td>
            <td>Cantidad_subordinados</td>
            <td>Detalle</td>
            <td>Editar</td>
            <td>Eliminar</td
    </tr>
    @foreach (var Empleado in Model.Empleados)
    {
        <tr>
            <td>@Empleado.ID</td>
            <td>@Empleado.Nombre</td>
            <td>@Empleado.Apellido</td>
            <td>@Empleado.Cedula</td>
            <td>@Empleado.Tipo_empleado</td>
            <td>@Empleado.Cantidad_subordinados</td>
            <!--Boton de detalle-->
            <td><a class="btn btn-secondary" asp-page="./Details" asp-route-id="@Empleado.ID">
                   <i class="fas fa-info-circle"></i>
            </a></td>
            <!--Boton para editar-->
            <td><a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Empleado.ID">
                <i class="fas fa-user-edit"></i>
            </a></td>
            <!--Boton para eliminar-->
            <td><a class="btn btn-danger" asp-page="./Delete" asp-route-id="@Empleado.ID">
               <i class="fas fa-trash"></i>
            </a></td>
        </tr>
    }
</table>